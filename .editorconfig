root = true

# ---------------------------
# common
# ---------------------------
[*]

end_of_line = lf
insert_final_newline = true

indent_style = space
indent_size = 2

charset = utf-8

trim_trailing_whitespace = true

max_line_length = 120

# ---------------------------
# js files
# ---------------------------
[**.js]
quote_type = single
curly_bracket_next_line = true

# ---------------------------
# css/sass files
# ---------------------------
[**.{css,scss}]
quote_type = double